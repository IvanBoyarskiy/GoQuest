<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_accent"
    tools:context=".Task">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/main">

                <!-- Номер задания -->
                <TextView
                    android:id="@+id/taskNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Задание #"
                    android:textSize="20sp"
                    android:textColor="@color/text"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/interbold"/>

                <!-- Текст задания -->
                <TextView
                    android:id="@+id/taskDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/interregular"/>

                <!-- Поле ввода кода -->
                <EditText
                    android:id="@+id/editTextGoCode"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:inputType="text|textMultiLine"
                    android:gravity="top"
                    android:textColor="@color/main"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/interbold"/>

                <Button
                    android:id="@+id/buttonTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tab"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/main_accent"
                    android:textColor="@color/main"
                    android:fontFamily="@font/intersemibold"/>

                <!-- Кнопка отправки -->
                <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Проверить"
                    android:backgroundTint="@color/main_accent"
                    android:textColor="@color/main"
                    android:textSize="16sp"
                    android:fontFamily="@font/intersemibold"
                    android:layout_marginBottom="20dp"/>

                <!-- Статус выполнения -->
                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Статус: Не проверен"
                    android:textSize="16sp"
                    android:textColor="#FFA0A0A0"
                    android:fontFamily="@font/interregular"
                    android:layout_marginBottom="20dp"/>

                <!-- Кнопка выхода -->
                <Button
                    android:id="@+id/buttonExit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Выйти"
                    android:backgroundTint="#FF333333"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="@font/intersemibold"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
